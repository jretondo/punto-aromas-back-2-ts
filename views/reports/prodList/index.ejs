<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Catálogo de Productos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      font-size: 11px;
    }

    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .producto {
      width: 23%;
      border: 1px solid #ccc;
      border-radius: 4px;
      margin-bottom: 15px;
      padding: 5px;
      box-sizing: border-box;
      text-align: center;
      page-break-inside: avoid;
    }

    .producto img {
      max-width: 100%;
      max-height: 115px;
      object-fit: contain;
      margin-bottom: 5px;
    }

    .nombre {
      font-weight: bold;
      font-size: 12px;
      margin: 4px 0;
    }

    .info {
      font-size: 10px;
      color: #333;
    }

    @media print {
      .producto {
        break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <h2 style="text-align:center; margin-bottom: 20px;">Catálogo de Productos</h2>
  <div class="container">
    <% productos.forEach(function(producto) { %>
      <div class="producto">
        <img src="<%= producto.imagen %>" alt="Imagen del producto">
        <div class="nombre"><%= producto.nombre %></div>
        <div class="info">Marca: <%= producto.marca %></div>
        <div class="info">Proveedor: <%= producto.proveedor %></div>
      </div>
    <% }); %>
  </div>
</body>
</html>